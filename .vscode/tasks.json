{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "PDF Heading Extractor - Setup and Test",
			"type": "shell",
			"command": "python",
			"args": ["setup.py"],
			"group": "build",
			"isBackground": false,
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Install dependencies and setup the PDF heading extractor"
		},
		{
			"label": "Run Basic Tests",
			"type": "shell",
			"command": "python",
			"args": ["simple_test.py"],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"detail": "Run basic functionality tests"
		},
		{
			"label": "Extract PDF Headings",
			"type": "shell",
			"command": "python",
			"args": ["main.py", "extract", "${input:pdfFile}"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"detail": "Extract headings from a PDF file"
		},
		{
			"label": "View Extraction Results",
			"type": "shell",
			"command": "python",
			"args": ["main.py", "view", "${input:jsonFile}"],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"detail": "View extraction results from JSON file"
		},
		{
			"label": "Batch Process PDFs",
			"type": "shell",
			"command": "python",
			"args": [
				"main.py",
				"batch",
				"${input:inputDir}",
				"--output-dir",
				"results"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [],
			"detail": "Batch process multiple PDF files"
		}
	],
	"inputs": [
		{
			"id": "pdfFile",
			"description": "PDF file to process",
			"default": "document.pdf",
			"type": "promptString"
		},
		{
			"id": "jsonFile",
			"description": "JSON results file to view",
			"default": "results.json",
			"type": "promptString"
		},
		{
			"id": "inputDir",
			"description": "Directory containing PDF files",
			"default": "pdfs",
			"type": "promptString"
		}
	]
}
